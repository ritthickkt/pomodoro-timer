{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "A Pomodoro Timer built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.ritthickkt.pomodoro-timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git"
    ],
    "mac": {
      "icon": "logo.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "logo.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "logo.png",
      "target": "AppImage"
    }
  },
  "author": "Ritthick Thiaga",
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  }
}